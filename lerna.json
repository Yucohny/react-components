{
  "packages": [
    "packages/*"
  ],
  "npmClient": "pnpm",
  "version": "independent",
  "ignoreChanges": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.md",
    "**/*.mdx"
  ],
  "command": {
    "version": {
      "message": "chore(release): bump version"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
